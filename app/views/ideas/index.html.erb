<div class="container">

  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg btn_new_idea" data-toggle="modal" data-target="#myModal">New Idea</button>

  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create your new Idea here</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-sm-12">
              <div class="well">
                <%= bootstrap_form_for @idea do |f| %>
                <%= f.text_field :title%>
                <%= f.text_area :body%>
                <%= f.submit 'Submit'%>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <br><br>

  <% @ideas.each do |idea| %>
    <div class="idea-container">
      <div class="row">
        <div class="col-sm-6 idea-title">
          <h5 class="idea_title"><%= link_to idea.title, idea_path(idea) %></h5>
        </div>
        <button class="show_button btn btn-default pull-right">Show</button>
      </div>
      <div class="slide_div">
        <div class="row">
          <div class="idea_body">
            <%= idea.body %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-2 author_div_index">
            <p class="pull-left author"> By <%= idea.user.first_name %> </p>
          </div>

          <div class="col-sm-4">
            <button class="btn btn-default joined">Joined</button>
            <button class="btn btn-default">Like</button>
          </div>

          <div class="col-sm-6">
            <div class="pull-right">
              Members: 2
              Likes: 5
            </div>
          </div>
        </div>
      </div>
      <hr>
    </div>
  <% end %>
</div>
